<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addWordText"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/addWordButton"
        android:layout_alignEnd="@+id/addWordText"
        android:layout_alignLeft="@+id/addWordButton"
        android:layout_alignStart="@+id/addWordText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add A Word"
        android:id="@+id/addWordButton"
        android:layout_below="@+id/addWordText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/getIndexText"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/addWordButton"
        android:layout_alignRight="@+id/getIndexButton"
        android:layout_alignEnd="@+id/getIndexButton"
        android:layout_alignLeft="@+id/getIndexButton"
        android:layout_alignStart="@+id/getIndexButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get The Index"
        android:id="@+id/getIndexButton"
        android:layout_below="@+id/getIndexText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word Count"
        android:id="@+id/wordCountText"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/getIndexButton"
        android:gravity="center"
        android:layout_alignLeft="@+id/addWordButton"
        android:layout_alignStart="@+id/addWordButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Letter Count "
        android:id="@+id/averageTextBox"
        android:layout_marginBottom="53dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>